<article class="post">
  <selection class="post-head">
    <h1><%= @post.title %></h1>
    <small>
      <time><%= @post.created_at.to_date.strftime("%d %B, %Y")%></time>
      |
      <%= link_to 'Изменить', edit_post_path(@post) %>
      |
      <%= link_to 'Удалить', post_path(@post), method: :delete, data: {confirm: 'Да'} %>
    </small>
  </selection>


  <selection class="post-body">
    <%= @post.body%>
  </selection>

</article>
